{
    "manifest_version": 3,
    "name": "Todo Extension",
    "version": "1.0",
    "description": "Manage your todos directly from this Chrome extension.",
    "icons": {
        "16": "favicon_io/favicon-16x16.png",
        "48": "favicon_io/favicon-32x32.png",
        "128": "favicon_io/favicon.ico"
    },
    "action": {
        "default_popup": "dist/index.html",
        "default_icon": "favicon_io/favicon-32x32.png"
    },
    "permissions": ["storage"],
    "host_permissions": [
        "https://todo-ext.onrender.com/"
    ]
}